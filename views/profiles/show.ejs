<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

    <main>
      <div>
        <img class="profile-avatar" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
      </div>
      <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
      <ul>

        <li>Name: <%= profile.name %>
        </li>
        <li>Connect: <%= profile.connect %>
        </li>
        <li>Profession: <%= profile.profession %>
        </li>
        <li>Email: <%= profile.email %>
        </li>
      </ul>
      <% if ( isSelf ) { %>

        <li>Phone Number: <a href="tel:phoneNumber">
            <%= profile.phoneNumber%>
          </a></li>
        <button>Leave A Review<a href="/reviews/"></a></button>
        <a href="/profiles/<%= profile._id %>/edit">
          <button class="btn">Complete/Edit Profile</button>
        </a>
        <% } %>

    </main>

    <%- include('../partials/footer') %>