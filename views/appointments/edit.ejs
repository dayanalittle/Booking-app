<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/appointments/edit.css" />
  <%- include('../partials/nav') %>

    <section>
      <h1>Edit Appointment</h1>
      <form action="/appointments/<%= appointment._id %>?_method=PUT" method="POST">
        <label>
          Name:
          <input type="text" name="name" value="<%= appointment.name %>" autocomplete="off">
        </label>
        <label for="date-select">Date:</label>
        <input type="date" name="date" id="date-input" required pattern="mm-dd-yyy">
        <label for="time-select">Time:</label>
        <select name="time" id="time-select">
          <option value="8:00am">8:00am</option>
          <option value="9:00am">9:00am</option>
          <option value="10:00am">10:00am</option>
          <option value="11:00am">11:00am</option>
          <option value="12:00pm">12:00pm</option>
          <option value="1:00pm">1:00pm</option>
          <option value="2:00pm">2:00pm</option>
          <option value="5:00pm">5:00pm</option>
          <option value=">6:00pm">6:00pm</option>
          <option value="7:00pm">7:00pm</option>
          <option value="8:00pm">8:00pm</option>
          <option value="9:00pm">9:00pm</option>
        </select>
        Flexible?
        <input type="checkbox" name="flexible" <%=appointment.flexible ? "checked" : "" %>
        >
        </label>
        <button type="submit" class="defaultButton">Update</button>
      </form>
    </section>

    <%- include('../partials/footer') %>